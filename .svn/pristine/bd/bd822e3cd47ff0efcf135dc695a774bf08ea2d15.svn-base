<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="35.0dip"
        android:layout_marginTop="5.0dip">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.5">

            <TextView
                android:gravity="left"
                android:id="@id/edtDateOrderList"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/edtDateOrderList"
                style="@style/listViewLabel" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <TextView
                android:gravity="center"
                android:id="@id/edtNumberOrderList"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/edtNumberOrderList"
                style="@style/listViewLabel" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="4.5">

            <TextView
                android:gravity="left"
                android:id="@id/edtCustomerNameList"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/edtCustomerNameList"
                style="@style/listViewLabel" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_marginTop="40dp"
        android:layout_height="2dp"
        android:gravity="center_horizontal"
        android:background="#1214ae">
    </LinearLayout>
</RelativeLayout>