<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.setes.setesvendas.app.pedidovenda.SendWsActivity">

    <LinearLayout
        android:gravity="top"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@id/lblStatusReceiveProcess"
                android:layout_width="fill_parent"
                android:layout_height="30.0dip"
                android:text="@string/lblStatusReceiveProcess" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@id/btnStartReceiveWs"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@string/btnStartReceiveWs"
                android:drawableLeft="@drawable/i_save"
                android:layout_weight="1.0"
                android:onClick="startSendWs"
                style="@style/buttonlabel" />

            <Button
                android:id="@id/btnBackReceiveWs"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@string/btnBackReceiveWs"
                android:drawableLeft="@drawable/i_back"
                android:layout_weight="1.0"
                android:onClick="closeSendWsActivity"
                style="@style/buttonlabel" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>